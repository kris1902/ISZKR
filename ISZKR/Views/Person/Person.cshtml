            <div class="modal-header">
                Dodaj zdjęcia*
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("UploadFiles", "Photo", new { personID = Model.Person.ID }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
