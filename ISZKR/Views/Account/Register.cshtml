@model ISZKR.ViewModels.OutsideViewModel
@{
    ViewBag.Title = "Rejestracja konta";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h2>@ViewBag.Title</h2>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.LoginAndRegisterViewModel.registerViewModel.Email, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.LoginAndRegisterViewModel.registerViewModel.Email, new { @class = "form-control", @placeholder="Adres e-mail", @id="email" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LoginAndRegisterViewModel.registerViewModel.Password, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-6">
            @Html.PasswordFor(m => m.LoginAndRegisterViewModel.registerViewModel.Password, new { @class = "form-control", @placeholder = "Hasło", @id = "password" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LoginAndRegisterViewModel.registerViewModel.ConfirmPassword, new { @class = "col-sm-3 control-label" })
        <div class="col-sm-6">
            @Html.PasswordFor(m => m.LoginAndRegisterViewModel.registerViewModel.ConfirmPassword, new { @class = "form-control", @placeholder = "Potwierdź hasło", @id = "confirm-password" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-3">
            <button type="submit" class="btn btn-success btn-block">Zarejestruj się</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
