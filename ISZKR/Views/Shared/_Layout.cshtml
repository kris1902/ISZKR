@model ISZKR.ViewModels.OutsideViewModel

<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — ISZKR</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="overlay"></div>
        <div class="container">
            <nav class="navbar navbar-default">

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("ISZKR", "Index", "Home", new { @class = "navbar-brand" })
                </div>


                <div class="collapse navbar-collapse" id="main-nav">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dodaj<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Dodaj osobę", "Index", "Home")</li>
                                <li>@Html.ActionLink("Dodaj zdarzenie", "Index", "Home")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Osoby", "Index", "Home")</li>
                        <li>@Html.ActionLink("Zdarzenia", "Index", "Home")</li>
                    </ul>

                    @Html.Partial("_LoginPartial")

                </div>
            </nav>

            <div class="wrap">
                <div class="content">
                    @RenderBody()
                    <hr />
                </div>
            </div>
    </div>

        <footer class="footer">
            <p>&copy; @DateTime.Now.Year @Html.ActionLink("Internetowy System Zarządzania Kroniką Rodzinną", "Index", "Home")</p>
            <p>Praca inżynierska: Uniwersytet Śląski, Informatyka Stosowana<br />Autor: Krzysztof Dubiel</p>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/Content/js")
        @RenderSection("scripts", required: false)
</body>
</html>
