                    }*@

                    @foreach (var e in Model.PersonsListFromEvents)
                    {
                        @:<a href="@Url.Action("Person", "Person", new { id = e.ID })">@e.Name @e.Surname</a>
                    }
                    <a href="#">Marek Adamiec, </a>
